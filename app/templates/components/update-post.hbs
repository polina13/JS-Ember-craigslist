{{#if updatePostShowForm}}
  <form>
    <label for="title">Title</label>
    {{input id="title" value=title placeholder=post.title}}
    <label for="author">Author</label>
    {{input id="author" value=author placeholder=post.author}}
    <label for="image">Image URL</label>
    {{input id="image" value=image placeholder=post.image}}
    <label for="description">Description</label>
    {{input id="description" value=description placeholder=post.description}}
    <label for="category">Category</label>
    {{input id="category" value=category placeholder=post.category}}
    <button {{action 'updatePost' post}}>Update Post</button>
  </form>

{{else}}

  <button {{action 'showForm'}}>Edit Post</button>
{{/if}}
